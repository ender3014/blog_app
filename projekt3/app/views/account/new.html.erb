<div id="TRESC"><h2>Rejestracja!</h2>

<%= form_for "Uzytkownik", :url => { :action => "new" } do |f| %>

<%= f.label "Imie" %>
<%= f.text_field "username" %>
<br>

<%= f.label "Nazwisko" %>
<%= f.text_field "user_surname" %>
<br>

<%= f.label "Login" %>
<%= f.text_field "login" %>
<br>

<%= f.label "Haslo" %>

<%= f.password_field "password" %>
<br>
<%= f.label "E-mail" %>

<%= f.text_field "email" %>
<br>

<%= f.label "Adres" %>

<%= f.text_field "address" %>
<br>
 
<%= f.submit "Zarejestruj"%>
<% end %>

<% if @save and @save.errors %>
<ul>
	<% @save.errors.full_messages.each do |err| %>
	 <li><%= err %></li>
<% end %>
</ul>
<% end %>

<a href="/account/login">Masz Konto? Zaloguj Sie!</a>










